import http.client

conn = http.client.HTTPSConnection("api.leaseweb.com")

headers = { 'X-LSW-Auth': "REPLACE_KEY_VALUE" }

conn.request("GET", "/bareMetals/v2/hardwareMonitoring?limit=20&offset=10&site=FRA-10&location=FRA-10-5.1.10-RM-SW01", headers=headers)

res = conn.getresponse()
data = res.read()

print(data.decode("utf-8"))